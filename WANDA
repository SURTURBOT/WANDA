

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $SURTURBOT_REPO == "WANDA" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVUlRVUkJPVC9XQU5EQVVTRVJCT1QvYXJjaGl2ZS9USEFOT1Muemlw" | base64 -d
    elif [[ $SURTURBOT_REPO == "WANDA" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVUlRVUkJPVC9XQU5EQVVTRVJCT1QvYXJjaGl2ZS9USEFOT1Muemlw" | base64 -d
    elif [[ $SURTURBOT_REPO =~ $regex ]]
    then
        if [[ $SURTURBOT_REPO_BRANCH ]]
        then
            echo "${SURTURBOT_REPO}/archive/${SURTURBOT_REPO_BRANCH}.zip"
        else
            echo "${SURTURBOT_REPO}/archive/THANOS.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1NVUlRVUkJPVC9XQU5EQVVTRVJCT1QvYXJjaGl2ZS9USEFOT1Muemlw" | base64 -d
    fi
}


_pro_bot () {
    local zippath
    zippath="THANOS.zip"
    echo "  ðŸ’• Downloading à¸¬à¸„à¸ à¹”à¸„ Source Code... ðŸ’•"
    wget -q $(_get_repolink) -O "$zippath"
    echo "  ðŸ’“Unpacking Data...ðŸ’“"
    THANOSPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " ðŸ’” Download Complete Now Installing ðŸ’”"
    echo "  âš¡ INSTALLING à¸¬à¸„à¸ à¹”à¸„âš¡"
    rm -rf "$zippath"
    sleep 5
    cd $THANOSPATH
    echo "    âš¡Starting à¸¬à¸„à¸ à¹”à¸„âš¡     "
    echo " ðŸ’ž NOW WAIT 3 MIN INSTALLING ALL THANOS PLUGIN ðŸ’ž"

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_pro_bot
